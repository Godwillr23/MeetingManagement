@model ChilliSoft_Assignment.Models.MeetingItem

@{
    ViewBag.Title = "Delete Meeting Item";
}

<div class="jumbotron">
    <div class="form_container">
        <h3>Are you sure you want to delete this Meeting Item?</h3>
        <div>
            <hr />

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger btn-action" />
                    <span class="btn btn-primary btn-action" onclick="history.back()">Back to List</span>               
                 </div>
            }
        </div>
    </div>
</div>