@model IEnumerable<ChilliSoft_Assignment.Models.Status>

@{
    ViewBag.Title = "Item Status List";
}

<div class="jumbotron">
    <h4 class="page-header">Item Status List</h4>
    @if (Model.Count() > 0)
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StatusItemId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StatusItem)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StatusItemId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StatusItem)
                    </td>
                    <td>
                        <span class="btn btn-success"> @Html.ActionLink("Edit", "Edit", new { id = item.StatusItemId })</span> |
                        <span class="btn btn-danger"> @Html.ActionLink("Delete", "Delete", new { id = item.StatusItemId })</span>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p style="text-align:center; color:red;">No Status Found</p>
    }
    <p>
        <span class="btn btn-primary"> @Html.ActionLink("Create Status", "Create")</span>
    </p>

</div>
