@model ChilliSoft_Assignment.Models.Meeting

@{
    ViewBag.Title = "Update Meeting";
}

<div class="jumbotron">
    <div class="form_container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4 class="page-header">Update Meeting</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MeetingId)

                <div class="form-group">
                    <div class="col-md-12" style="text-align:left">
                        <span>Meeting Code:</span>
                        @Html.EditorFor(model => model.MeetingCode, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MeetingCode, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12" style="text-align:left">
                        <span>Meeting Date:</span>
                        @Html.EditorFor(model => model.MeetingDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        @Html.ValidationMessageFor(model => model.MeetingDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12" style="text-align:left">
                        <span>Meeting Time:</span>
                        @Html.EditorFor(model => model.MeetingTime, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                        @Html.ValidationMessageFor(model => model.MeetingTime, "", new { @class = "text-danger" })
                    </div>
                </div>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.DateCreated)

                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Save" class="btn btn-success btn-action" />
                        <span class="btn btn-primary btn-action"> @Html.ActionLink("Back to List", "Index")</span>
                    </div>
                </div>
            </div>
        }
    </div>
</div>