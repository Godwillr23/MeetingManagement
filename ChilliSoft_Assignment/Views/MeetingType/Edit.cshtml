@model ChilliSoft_Assignment.Models.MeetingType

@{
    ViewBag.Title = "Update Meeting Type";
}

<div class="jumbotron">
    <div class="form_container">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Update Meeting Type</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MeetingTypeId)

                <div class="form-group">
                    <div class="col-md-12" style="text-align:left">
                        <span>Meeting Type:</span>
                        @Html.EditorFor(model => model.MeetingName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MeetingName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Save" class="btn btn-success btn-action" />
                        <span class="btn btn-primary btn-action"> @Html.ActionLink("Back to List", "Index")</span>
                    </div>
                </div>
            </div>
        }

    </div>
</div>