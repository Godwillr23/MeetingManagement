@model ChilliSoft_Assignment.Models.Staff

@{
    ViewBag.Title = "Delete Staff";
}

<div class="jumbotron">
    <div class="form_container">
        <h3>Are you sure you want to delete this Staff Member?</h3>
        <div>
            <hr />

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger btn-action" />
                    <span class="btn btn-primary btn-action">@Html.ActionLink("Back to List", "Index")</span>
                </div>
            }
        </div>
    </div>
</div>