@model IEnumerable<ChilliSoft_Assignment.Models.MeetingType>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h4 class="page-header">Meeting Type List</h4>
        @if (Model.Count() > 0)
        {
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.MeetingName)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MeetingName)
                        </td>
                        <td>
                            <span class="btn btn-success"> @Html.ActionLink("Edit", "Edit", new { id = item.MeetingTypeId })</span> |
                            <span class="btn btn-danger"> @Html.ActionLink("Delete", "Delete", new { id = item.MeetingTypeId })</span>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p style="text-align:center; color:red;">No Meeting Type Found</p>
        }
        <p>
            <span class="btn btn-primary"> @Html.ActionLink("Create Meeting Type", "Create")</span>
        </p>
    
</div>