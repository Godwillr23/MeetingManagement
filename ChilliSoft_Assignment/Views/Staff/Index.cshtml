@model IEnumerable<ChilliSoft_Assignment.Models.Staff>

@{
    ViewBag.Title = "Staff List";
}

<div class="jumbotron">
    <h4 class="page-header">Staff List</h4>
    @if (Model.Count() > 0)
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StaffId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Firstname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lastname)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StaffId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Firstname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lastname)
                    </td>
                    <td>
                        <span class="btn btn-success"> @Html.ActionLink("Edit", "Edit", new { id = item.StaffId })</span> |
                        <span class="btn btn-danger"> @Html.ActionLink("Delete", "Delete", new { id = item.StaffId })</span>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p style="text-align:center; color:red;">No Staff Member Found</p>
    }
    <p>
        <span class="btn btn-primary"> @Html.ActionLink("Add Staff", "Create")</span>
    </p>

</div>
