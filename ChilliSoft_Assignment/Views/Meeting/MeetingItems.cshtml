@model IEnumerable<ChilliSoft_Assignment.Models.MeetingItem>

@{
    ViewBag.Title = "Meeting Items";
}

<div class="jumbotron">
    <h4 class="page-header">Meeting Items</h4>
    @if (Model.Count() > 0)
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MeetingItemName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DueDate)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="max-width:200px">
                        @Html.DisplayFor(modelItem => item.MeetingItemName)
                    </td>
                    <td style="max-width:200px">
                        @Html.DisplayFor(modelItem => item.ItemDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DueDate)
                    </td>
                    <td>
                        <span class="btn btn-primary"> @Html.ActionLink("Add New Status", "AddNewStatus", new { id = item.ItemId })</span> |
                        <span class="btn btn-success"> @Html.ActionLink("Edit", "EditMeetingItem", new { id = item.ItemId })</span> |
                        <span class="btn btn-info"> @Html.ActionLink("History", "MeetingItemHistory", new { id = item.ItemId })</span> |
                        <span class="btn btn-danger"> @Html.ActionLink("Delete", "DeleteMeetingItem", new { id = item.ItemId })</span>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p style="text-align:center; color:red;">No Meeting Item Found</p>
    }
    <p>
        <span class="btn btn-success"> @Html.ActionLink("Add Meeting Item", "CreateMeetingItem")</span> |
        <span class="btn btn-primary"> @Html.ActionLink("Back to Meetings", "Index", "Meeting", routeValues: null, htmlAttributes: new { title = "Meeting" })</span>
    </p>

</div>
