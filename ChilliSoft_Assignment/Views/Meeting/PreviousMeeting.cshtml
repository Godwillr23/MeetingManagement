@model IEnumerable<ChilliSoft_Assignment.Models.MeetingItem>

@{
    ViewBag.Title = "Meeting Items";
}

@functions{
    public string GetMeetingCode(int id)
    {
        ChilliSoft_Assignment.Models.DataContext _context = new ChilliSoft_Assignment.Models.DataContext();

        var code = _context.Meetings.Where(x => x.MeetingId == id).FirstOrDefault();

        return code.MeetingCode;
    }
}

<div class="jumbotron">
 <h4 class="page-header">Previous Meeting Items</h4>
@using (Html.BeginForm())
{
    if (Model.Count() > 0)
    {
        <table id="tblMeetingItems" class="table" >
            <tr>
                <th>
                   Meeting Code
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MeetingItemName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DueDate)
                </th>
                <th style="text-align:center">Select Item</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @GetMeetingCode(item.MeetingId)
                    </td>
                    <td style="max-width:200px">
                        @Html.DisplayFor(modelItem => item.MeetingItemName)
                    </td>
                    <td style="max-width:200px">
                        @Html.DisplayFor(modelItem => item.ItemDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DueDate)
                    </td>            
                    <td style="text-align:center">
                        <input type="checkbox" name="id+@item.ItemId" id="id+@item.ItemId" style="width:30px; height:30px" />
                    </td>
                </tr>
            }
        </table>
        <p>
            <input type="submit" id="btnSave" value="Create Meeting" class="btn btn-success" />
            @*<span class="btn btn-success"> @Html.ActionLink("Create Meeting", "CreateMeetingItem")</span>*@ 
        </p>
    }
    else
    {
        <p style="text-align:center; color:red;">No Meeting Item Found</p>
        <br/>
        <p>
            <span class="btn btn-primary"> @Html.ActionLink("Back to Meetings", "Index", "Meeting", routeValues: null, htmlAttributes: new { title = "Meeting" })</span>
        </p>
    }

}
</div>

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script>
    $("body").on("click", "#btnSave", function () {
    //Loop through the Table rows and build a JSON array.
    var customers = new Array();
    $("#tblMeetingItems TBODY TR").each(function () {
        var row = $(this);
        var customer = {};
        customer.Name = row.find("TD").eq(0).html();
        customer.Country = row.find("TD").eq(1).html();
        customers.push(customer);
    });

    //Send the JSON array to Controller using AJAX.
    $.ajax({
        type: "POST",
        url: "/Meeting/AddPreviousMeetingItems",
        data: JSON.stringify(customers),
        contentType: "application/json; charset=utf-8",
        dataType: "json",
        success: function (r) {
            alert(r + " record(s) inserted.");
        }
    });
});
</script>